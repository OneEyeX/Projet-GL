@RestController
@CrossOrigin(origins = "*")
@RequestMapping(path = "/commissions")
public class CommissionController {
	
	private CommissionService commissionService;
	
	@Autowired
	public CommissionController(CommissionService commissionService) {
		this.commissionService=commissionService;
	}
	
	
	@Autowired
	private LogClass logClass;
	
 
	@GetMapping(path = "all")
	public ResponseEntity<List<Commission>> getAllCommission(){	
		logClass.addTrack(
				"consultation","Evénement de log consultation list commission ",/*vb.getPerson(),*/ "INFO");
			  
		List<Commission> commissions=commissionService.listCommission();
		return new ResponseEntity<>(commissions,HttpStatus.OK);
	}
	
	@PostMapping(path = "add")
	public ResponseEntity<Commission> save(@RequestBody Commission commission) {	
		Commission com=commissionService.save(commission);
		logClass.addTrack(
				"ajout","Evénement de log ajout commission "+com.getCommissionReference() + "-"+com.getCommissionObjet(),/*vb.getPerson(),*/ "INFO");
		
		return new ResponseEntity<>(com,HttpStatus.CREATED);
	}
	
	@GetMapping(path = "find/{id}")
	public ResponseEntity<Commission>  commissionById(@PathVariable(name = "id") int id){
 		
		Commission commmi=commissionService.getCommissionById(id);
		logClass.addTrack(
				"consultation","Evénement de log consultation commission "+commmi.getCommissionReference() + "-"+commmi.getCommissionObjet(),/*vb.getPerson(),*/ "INFO");
		
		return new ResponseEntity<>(commmi,HttpStatus.CREATED);
		
	}
	
	@DeleteMapping(path = "deleteMembre/{id}")
	public void delete(@PathVariable(name = "id") Integer id) {
		System.out.println("dans méthode delete  "+id);
		Commission commmi=commissionService.getCommissionById(id);

		logClass.addTrack(
				"suppression","Evénement de log suppression commission "+commmi.getCommissionReference() + "-"+commmi.getCommissionObjet(),/*vb.getPerson(),*/ "INFO");
		
		
		commissionService.delete(id);
	}

	 @PutMapping("/update/{id}")
	    public ResponseEntity<Commission> updateCommission(@RequestBody Commission commission,@PathVariable(name = "id") int id) {
									
		 Commission updateCommission = commissionService.update(commission,id);
			logClass.addTrack(
					"modification","Evénement de log modification commission "+id + "-"+commission.getCommissionObjet(),/*vb.getPerson(),*/ "INFO");
			
			
	        return new ResponseEntity<>(updateCommission, HttpStatus.OK);
	    }
	
