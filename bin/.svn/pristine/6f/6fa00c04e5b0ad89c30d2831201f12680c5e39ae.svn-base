package com.xtensus.passosyf.controllers;

import java.util.Date;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.format.annotation.DateTimeFormat;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;


import com.xtensus.passosyf.entities.Reunion;
import com.xtensus.passosyf.services.PlanningSalleService;

@CrossOrigin("*")
@RestController
@RequestMapping(path = "PlanningSalle")
public class PlanningSalleController {
	
	@Autowired
	PlanningSalleService planningSalleService;
	
	@GetMapping(path = "/planningsalle/{idS}")
	public  Iterable<Reunion> getListeReunionBySalle(@PathVariable(name = "idS") Integer salleId) {
		 Iterable<Reunion> listeReunion = planningSalleService.listereunionBySalleId(salleId);
		return listeReunion;
	}
	
	@GetMapping(path = "/planningsalledate/{idS}&{date}")
	public  Iterable<Reunion> getListeReunionBySalleAndDate(@PathVariable int idS, @DateTimeFormat(iso = DateTimeFormat.ISO.DATE) @PathVariable Date date) {
		 Iterable<Reunion> listeReunion = planningSalleService.listereunionBySalleId(idS);
		return listeReunion;
	}

}
