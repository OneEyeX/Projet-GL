	}

	public Integer getReunionDureeRelle() {
		return reunionDureeRelle;
	}

	public void setReunionDureeRelle(Integer reunionDureeRelle) {
		this.reunionDureeRelle = reunionDureeRelle;
	}
	
	@ManyToOne(fetch = FetchType.EAGER)
	@JoinColumn(name = "etatId", nullable = false)
	public Etat getEtat() {
		return etat;
	}

	public void setEtat(Etat etat) {
		this.etat = etat;
	}

	public String getReunionDescription() {
		return reunionDescription;
	}

	public void setReunionDescription(String reunionDescription) {
		this.reunionDescription = reunionDescription;
	}


	public String getReunionRaison() {
		return reunionRaison;
	}

	public void setReunionRaison(String reunionRaison) {
		this.reunionRaison = reunionRaison;
	}
	

	@ManyToOne(fetch = FetchType.EAGER)
	@JoinColumn(name = "reunionSalleId")
	public Salle getSalle() {
		return salle;
	}

	public void setSalle(Salle salle) {
		this.salle = salle;
	}
	
	
	
}